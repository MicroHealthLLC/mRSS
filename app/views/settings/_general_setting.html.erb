<%= form_for(@setting, url: settings_path, html: { method: 'post',  :multipart => true, class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
       <%= label_tag "application_name", "Application name: ", class: 'col-md-2 control-label' %>
        <div class="col-md-12">
          <%= text_field_tag :application_name, Setting['application_name'], class: 'form-control', rows: '5', cols: '4' %>
        </div>
    </div>

    <div class="form-group ">
       <%= label_tag "home_page_content", "Home page Content:", class: 'col-md-4 control-label mt-3' %>
         <div class="text-bold">
           <div class="col-md-12 border ">
              <%= text_area_tag :home_page_content, Setting['home_page_content'], class: 'ck-editor'  %>
           </div>
         </div>
    </div>

    </textarea>
    <div class="form-group margin-top-10" >
      <div class="col-xs-12">
        <%= f.submit "Save", class: 'btn btn-success pull-right' %>
      </div>
    </div>
<% end %>

<script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
