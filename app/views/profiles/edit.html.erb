<div role="tabpanel" class="tab-pane" id="usersettings" aria-expanded="false">
  <div class="card">
    <div class="header">
      <h2><strong>EDIT USER</strong></h2>
    </div>

    <%= form_for current_user, url: profile_path, method: :post, local: true  do |f| %>
      <div class="body">
        <div class="form-group">
          <%= f.text_field :login  %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :new_password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div>
          <button class="btn btn-info btn-round float-right mb-3"><% f.submit%>Update</button>
           <%= link_to root_path , class: 'btn btn-xs btn-warning modal-trigger mr-3 float-right' do %>
            Cancel
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
