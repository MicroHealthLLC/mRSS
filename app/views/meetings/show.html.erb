<div class="row w-100 pl-3 mt-5 ">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="card" id="meeting-details">
          <div class="body">
                     <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active show" id="home">
                    <div class="product-description">
                        <h2 class="mb-5">Details</h2>
                        <dl class="row mb-5">
                            <dt class="col-sm-4">Name :</dt>
                            <dd class="col-sm-8"> <%= @meeting.name %></dd>
                            <dt class="col-sm-4">Description :</dt>
                            <dd class="col-sm-8"><%= @meeting.description.to_s.html_safe %></dd>
                            <dt class="col-sm-4">Room :</dt>
                            <dd class="col-sm-8"> <%= @meeting.room %></dd>
                            <dt class="col-sm-4">Date :</dt>
                            <dd class="col-sm-8"><%= @meeting.meeting_dates.pluck(:date).map{|d| d.strftime('%d %B %Y')}.join(', ') %></dd>
                            <dt class="col-sm-4">Time start :</dt>
                            <dd class="col-sm-8"><%= @meeting.time_start.strftime('%I:%M %p') %></dd>
                            <dt class="col-sm-4">Time End :</dt>
                            <dd class="col-sm-8"><%= @meeting.time_end.strftime('%I:%M %p') %></dd>
                        </dl>
                    </div>
                </div>

                <div class="col-md-12 mb-3">
                  <div class="pull-right links">

                    <%= link_to 'Delete', room_meeting_path(@room, @meeting), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger mr-2' %>
                    <%= link_to ' Edit ', edit_room_meeting_path(@room, @meeting), class: 'btn btn-warning mr-2' %>
                    <%= link_to 'Back', room_path(@room) , class: 'btn btn-primary ' %>
                  </div>
                </div>
              </div>
          </div>
      </div>
  </div>
</div>
