<% @meetings = Meeting.joins(:meeting_dates).where(meeting_dates: {date: Date.today}).group_by(&:room_id) %>
<div class="row clearfix mt-5">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="card">
              <div class="header">
                  <h2>
                      <strong>Meetings Today</strong>
                  </h2>
              </div>
            <div class="body">
                  <div class="table-responsive">
                      <table class="table table-bordered js-basic-example table-striped table-hover save-stage dataTable"
                          style="width:100%;">
                          <thead>
                              <tr>
                                  <tr>
                                    <th>Name</th>
                                    <th>Time start</th>
                                    <th>Time end</th>
                                    <th class="no-sorting text-right">Actions</th>
                              </tr>
                          </thead>
                          <tbody>
                              <% @meetings.each do |room_id, meetings| %>
                                  </tr>
                                    <% meetings.each do |meeting| %>
                                        <tr>
                                          <td><%= meeting.name %></td>
                                          <td><%= meeting.time_start.strftime('%-I:%M %p') %></td>
                                          <td><%= meeting.time_end.strftime('%-I:%M %p') %></td>
                                          <% if current_user %>
                                          <td>
                                          <div class="text-right">
                                          <%= link_to '<i class="material-icons">open_in_new</i> '.html_safe, room_meeting_path(meeting.room, meeting), data: {turbolinks: false}, class: 'btn tblActnBtn' %>
                                          <%= link_to '<i class="material-icons">edit</i> '.html_safe, edit_room_meeting_path(meeting.room, meeting), data: {turbolinks: false}, class: 'btn tblActnBtn' %>
                                          <%= link_to '<i class="material-icons">delete</i> '.html_safe, room_meeting_path(meeting.room, meeting), data: {turbolinks: false, confirm: 'Are you sure to delete this meeting  ?', method: :delete }, class: 'btn tblActnBtn' %></td>
                                          </div>
                                      <% end %>
                                        </tr>
                                    <% end %>
                              <% end %>
                            </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </div>
<script>

  $(function () {
    $('.js-basic-example').DataTable({
    responsive: true
  } );
  })

</script>

