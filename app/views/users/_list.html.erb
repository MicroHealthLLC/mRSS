<table style="width: 100%" class="table table-responsive" id="users_table">
  <thead>
  <tr id="users_input">
    <th>#</th>
    <th><%= t :email %></th>
    <th> <%= t('profile.first_name') %> </th>
    <th> <%= t('profile.last_name') %> </th>
    <th> <%= t('role') %> </th>
    <td></td>

    <td></td>
    <td></td>

  </tr>
  </thead>

  <tbody>
  <% @users.each do |user | %>
      <tr>
        <td <%= link_to(user.id, user)  %> </td>
        <td> <%=  user.email %></td>
        <td> <%=  user.login %></td>

        <td><%#= delete_link(user, 'data-turbolinks'=> false) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).on('turbolinks:load', function(){
        initDataTable('users_table')
    } );
</script>