<div class="row clearfix pl-3 ">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="card">
              <div class="header">
                  <h2>
                      <strong>Rooms</strong>
                  </h2>
              </div>
            <div class="body">
                  <div class="table-responsive">
                      <table class="table table-bordered js-basic-example table-striped table-hover save-stage dataTable"
                          style="width:100%;">
                          <thead>
                              <tr>
                                  <tr>
                                    <th>Room Name</th>
                                       <% if current_user %>
                                        <th class="no-sorting text-right">Actions</th>
                                      <% end %>
                              </tr>
                          </thead>
                          <tbody>
                              <% @rooms.each do |room| %>
                                <tr data-open-url="<%= room_path(room) %>">
                                    <td class="room_uppercase"><%= room.name %></td>
                                      <% if current_user %>
                                          <td>
                                          <div class="text-right">
                                          <%= link_to '<i class="material-icons">open_in_new</i> '.html_safe, room_path(room), data: {turbolinks: false}, class: 'btn tblActnBtn' %>
                                          <%= link_to '<i class="material-icons">edit</i> '.html_safe, edit_room_path(room), data: {turbolinks: false}, class: 'btn tblActnBtn' %>
                                          <%= link_to '<i class="material-icons">delete</i> '.html_safe, room_path(room), data: {turbolinks: false, confirm: 'Are you sure to delete this room (all meetings will be deleted) ?', method: :delete }, class: 'btn tblActnBtn' %>
                                        </td>
                                          </div>
                                      <% end %>
                                    </tr>
                                  <% end %>
                            </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </div>

<script>

  $(function () {
    $('.js-basic-example').DataTable({
      responsive: true
    });
  })

</script>

