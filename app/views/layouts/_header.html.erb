<!-- Top Bar -->
<nav class="navbar">
    <div class="container-fluid">
        <div class="navbar-header">
            <a href="#" onClick="return false;" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse"
                aria-expanded="false"></a>
            <a href="#" onClick="return false;" class="bars"></a>

            <%= link_to root_path, class: 'navbar-brand' do %>
              <% if (Setting.first.try(:logo) and Setting.first.try(:logo_url)) %>
                <%= image_tag(Setting.first.logo_url, alt: 'Brand', width: '38') %>
              <% else %>
                <%= image_tag('microhealth-logo.png', width: '38', alt: 'Brand') %>
              <% end %>
              <span class="logo-name">
                <%= "#{Setting['application_name']}".html_safe %>
              </span>
              <% end %>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="pull-left">
                <li>
                    <a href="#" onClick="return false;" class="sidemenu-collapse">
                        <i class="material-icons">reorder</i>
                    </a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <!-- Full Screen Button -->
                <li class="fullscreen">
                    <a href="javascript:;" class="fullscreen-btn">
                        <i class="fas fa-expand"></i>
                    </a>
                </li>
                <!-- #END# Full Screen Button -->

              <% if current_user.present? %>
                <li class="dropdown user_profile mr-4">
                   <a href="#" onClick="return false;" class="dropdown-toggle" data-toggle="dropdown" role="button">
                      <%= image_tag("img_avatar.png", width: "32", height: "32", alt: "User") %>
                   </a>
                    <ul class="dropdown-menu pullDown">
                        <li class="body">
                            <ul class="user_dw_menu">
                                <li>
                                  <%= link_to(profile_edit_path) do %>
                                    <i class="material-icons">person</i>Profile
                                  <% end %>
                                </li>
                                <li>
                                  <%= link_to meetings_path do %>
                                    <i class="fas fa-calendar-alt mr-2 pt-1"></i>Meetings
                                  <% end %>
                                </li>
                                <li>
                                  <%= link_to(destroy_user_session_path, title: 'Sign Out', data: {action: 'userLogout', 'logout-msg' => 'You can improve your security further after logging out by closing this opened browser'}) do %>
                                    <i class="material-icons">power_settings_new</i>Logout
                                  <% end %>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
                <% else %>
                  <li class="mr-4">
                    <%= link_to(new_user_session_path, title: 'Sign In') do %>
                      <i class="fas fa-sign-in-alt"></i>
                    <% end %>
                  </li>
                <% end %>

            </ul>
        </div>
    </div>
</nav>
<!-- #Top Bar -->
